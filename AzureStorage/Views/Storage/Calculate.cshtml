@model AzureStorage.Models.Storage

@{
    ViewData["Title"] = "Calculate Storage";
}

<h1>Calculate Storage</h1>

<h4>Storage</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Calculate">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="GigaBytes" class="control-label"></label>
                <input asp-for="GigaBytes" class="form-control" />
                <span asp-validation-for="GigaBytes" class="text-danger"></span>
            </div>
            <div class="form-group form-check">
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="GeoRedundant" /> @Html.DisplayNameFor(model => model.GeoRedundant)
                </label>
            </div>
            <br />
            <div class="form-group">
                <input type="submit" value="Calculate" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>
<br />
<div>
    <h4>Predicted monthly storage cost ($): @ViewBag.StorageCost</h4>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
